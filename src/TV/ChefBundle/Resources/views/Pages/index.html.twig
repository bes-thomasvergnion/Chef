        </div>
    </section>
    
{% endblock %}

{% block javascripts %}
    <script src="{{ asset('chef/js/owl.carousel.min.js') }}" type="text/javascript"></script>
    <script src="{{ asset('chef/js/slider.js') }}" type="text/javascript"></script>
{% endblock %}
