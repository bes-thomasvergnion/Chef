{% extends "::layout.html.twig" %}

{% block stylesheets %}
    <link href="{{ asset('chef/css/owl.carousel.min.css') }}" rel="stylesheet" />
    <link href="{{ asset('chef/css/owl.theme.default.min.css') }}" rel="stylesheet" type="text/css" media="all" />
{% endblock %}

{% block body %}
    
    <section class="center no-padding">
        <div id="slider">
            <div class="search-box home">
                <h2 class="title-search">Trouver une recette:</h2>
                {{ render(controller("TVChefBundle:Search:index",{request: app.request})) }}
            </div>
            <div id="slide">
                <div class="owl-carousel">
                    <div> <img src="{{ asset('chef/images/slider1.jpg') }}" alt="Saumon" /> </div>
                    <div> <img src="{{ asset('chef/images/slider2.jpg') }}" alt="Risotto" /> </div>
                    <div> <img src="{{ asset('chef/images/slider3.jpg') }}" alt="Veaux" /> </div>
                </div>
            </div>
        </div>
    </section>

    <section class="center no-top">
        <div class="container">
            <h2 class="title_home">Manger avec de ingrédients locaux et de saison:</h2>
            {% for recipe in listRecipesLocal %}
                {% if count == 0 or count%3 == 0 %}<div class="row"> {% endif %}
                {% set count = count + 1 %}
                <a class="link-recipe" href="{{ path('tv_chef_recipe_view', {'id': recipe.id}) }}">
                    <div class="polaroid recipe{% if loop.index is odd %} left {%else%} right{%endif%} {% if loop.index == 3 or loop.index%3 == 0 %}last{%endif%}">
                        <img class="picture" src="{% if recipe.image.webPath is defined %}{{ asset(recipe.image.webPath) }}{%else%}{{ asset('chef/images/default.jpg') }}{%endif%}" alt="{%if recipe.image.alt is defined%}{{ recipe.image.alt }}{%else%}Default{%endif%}" />
                        <h3>{{ recipe.name }}</h3>
                        <div class="absolute note">
                            {% if recipe.star != 0 %}
                                {% for i in 1..recipe.star %}
                                    <i class="fa fa-star" aria-hidden="true"></i>
                                {% endfor %}
                            {% endif %}
                        </div>
                        <div class="absolute level">
                            {% for i in 1..recipe.level.id %}
                                <img src="{{ asset('chef/images/level2.png') }}" alt="level">
                            {% endfor %}
                        </div>
                    </div>
                </a>
                {% if count == 3 or count%3 == 0 or loop.last %}<div class="clearfix"></div> </div>{% endif %}
            {% endfor %}
            <div class="clearfix"></div>
        </div>
    </section>

    <hr/>

