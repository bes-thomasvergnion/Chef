                            {% for i in 1..recipe.level.id %}
                                <img src="{{ asset('chef/images/level2.png') }}" alt="level">
                            {% endfor %}
                        </div>
                    </div>
                </a>
                {% if count == 3 or count%3 == 0 or loop.last %}<div class="clearfix"></div> </div>{% endif %}
            {% endfor %}
            <div class="clearfix"></div>
        </div>
    </section>

    <hr/>

